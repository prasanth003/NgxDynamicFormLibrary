/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "paths": {
      "ngx-dynamic-form": [
        "./dist/ngx-dynamic-form"
      ],
      "ngx-dynamic-form-antd": [
        "./dist/ngx-dynamic-form-antd"
      ],
      "ngx-dynamic-form-bootstrap": [
        "./dist/ngx-dynamic-form-bootstrap"
      ],
      "ngx-dynamic-form-material": [
        "./dist/ngx-dynamic-form-material"
      ]
    },
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-dynamic-form/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-dynamic-form/tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-material/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-material/tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-antd/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-antd/tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-bootstrap/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-dynamic-form-bootstrap/tsconfig.spec.json"
    }
  ]
}
