{
  "name": "dynamic-form",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:core": "ng build ngx-dynamic-form && tsc -p projects/ngx-dynamic-form/tsconfig.schematics.json && npm run copy:schematics",
    "copy:schematics": "cp projects/ngx-dynamic-form/src/schematics/ng-add/schema.json dist/ngx-dynamic-form/schematics/ng-add/schema.json",
    "build:child": "ng build ngx-dynamic-form-bootstrap && ng build ngx-dynamic-form-antd && ng build ngx-dynamic-form-material"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.1.2",
    "@angular/cdk": "20.1.2",
    "@angular/common": "20.1.2",
    "@angular/compiler": "20.1.2",
    "@angular/core": "20.1.2",
    "@angular/forms": "20.1.2",
    "@angular/material": "20.1.2",
    "@angular/platform-browser": "20.1.2",
    "@angular/router": "20.1.2",
    "@ngx-dynamic-form/ngx-dynamic-form": "^1.0.0",
    "@ngx-dynamic-form/ngx-dynamic-form-bootstrap": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.13",
    "bootstrap": "^5.3.2",
    "jquery": "^3.6.0",
    "monaco-editor": "^0.52.2",
    "ng-zorro-antd": "^20.2.1",
    "ngx-monaco-editor-v2": "^20.0.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "20.1.2",
    "@angular/cli": "20.1.2",
    "@angular/compiler-cli": "20.1.2",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.2",
    "sass-embedded": "^1.93.2",
    "typescript": "~5.8.0"
  }
}