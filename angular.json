{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "dynamic-form": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              },
              { 
                "glob": "**/*", 
                "input": "node_modules/monaco-editor/min/vs", 
                "output": "/assets/monaco/min/vs/" 
              }
            ],
            "styles": [
              "src/styles.scss",
              "./node_modules/bootstrap/dist/css/bootstrap.css"
            ],
            "scripts": [
              "./node_modules/jquery/dist/jquery.min.js",
              "./node_modules/bootstrap/dist/js/bootstrap.js"            
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "dynamic-form:build:production"
            },
            "development": {
              "buildTarget": "dynamic-form:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss"
            ]
          }
        }
      }
    },
    "ngx-dynamic-form": {
      "projectType": "library",
      "root": "projects/ngx-dynamic-form",
      "sourceRoot": "projects/ngx-dynamic-form/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-dynamic-form/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-dynamic-form/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ngx-dynamic-form/tsconfig.spec.json"
          }
        }
      }
    },
    "ngx-dynamic-form-material": {
      "projectType": "library",
      "root": "projects/ngx-dynamic-form-material",
      "sourceRoot": "projects/ngx-dynamic-form-material/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-dynamic-form-material/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-dynamic-form-material/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ngx-dynamic-form-material/tsconfig.spec.json"
          }
        }
      }
    },
    "ngx-dynamic-form-antd": {
      "projectType": "library",
      "root": "projects/ngx-dynamic-form-antd",
      "sourceRoot": "projects/ngx-dynamic-form-antd/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-dynamic-form-antd/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-dynamic-form-antd/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ngx-dynamic-form-antd/tsconfig.spec.json"
          }
        }
      }
    },
    "ngx-dynamic-form-bootstrap": {
      "projectType": "library",
      "root": "projects/ngx-dynamic-form-bootstrap",
      "sourceRoot": "projects/ngx-dynamic-form-bootstrap/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-dynamic-form-bootstrap/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-dynamic-form-bootstrap/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ngx-dynamic-form-bootstrap/tsconfig.spec.json"
          }
        }
      }
    }
  }
}
